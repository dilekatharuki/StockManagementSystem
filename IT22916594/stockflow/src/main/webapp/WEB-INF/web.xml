<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocatio="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>CustomerAdd</servlet-name>
		<servlet-class>com.customer.CustomerAdd</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerAdd</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>updateCustomer</servlet-name>
		<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateCustomer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteCustomer</servlet-name>
		<servlet-class>com.customer.deletecustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteCustomer</servlet-name>
		<url-pattern>/delete</url-pattern>

	</servlet-mapping>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.customer.loginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>

	</servlet-mapping>

	<servlet>
		<servlet-name>CustomerServlet</servlet-name>
		<servlet-class>com.customer.CustomerServlet</servlet-class>

		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/CustomerServlet</url-pattern>

	</servlet>
	<servlet>
		<servlet-name>ManagerCustomerServlet</servlet-name>
		<servlet-class>com.customer.ManagerCustomerServlet</servlet-class>

		<servlet-name>ManagerCustomerServlet</servlet-name>
		<url-pattern>/ManagerCustomerServlet</url-pattern>

	</servlet>

<servlet>
		<servlet-name>ManagerCustomerServlet</servlet-name>
		<servlet-class>com.order.manageOrderServlet</servlet-class>

		<servlet-name>manageOrderServlet</servlet-name>
		<url-pattern>/manageOrderServlet</url-pattern>

	</servlet>

</web-app>